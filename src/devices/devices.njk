---
pagination:
  data: collections.deviceCollection
  size: 1
  alias: deviceItem
permalink: "device/{{ deviceItem.id | lower }}/index.html"
---

<h1>{{ deviceItem.name }}</h1>
<p>{{ deviceItem.description }}</p>

<ul>
{% for chip in collections.chipsCollection %}
  {% if chip.device == deviceItem.device %}
    <li><a href="/chips/{{ chip.id }}/">{{ chip.name }}</a></li>
  {% endif %}
{% endfor %}
</ul>
